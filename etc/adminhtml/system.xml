<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <tab id="mavenbird" sortOrder="100" translate="label" class="tab-mavenbird-extensions">
            <label><![CDATA[Mavenbird Extensions]]></label>
        </tab>
        <section id="whatsappsection" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>mavenbird</tab>
            <label>Share on WhatsApp</label>
            <resource>Mavenbird_WhatsApp::configuration</resource>
            <group id="whatsappgroup" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                
                <!-- Enable Field -->
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Extension</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Select Yes to enable WhatsApp module on frontend.]]></comment>
                </field>
                
                <!-- Display in All Products Field -->
                <field id="dispayinall" translate="label" type="select" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Share On WhatsApp Button In All Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[If set to <b>Yes</b>, WhatsApp share button will be displayed in all products. If set to <b>No</b>, WhatsApp share button will only be visible on products with "Share On WhatsApp" option enabled.]]></comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                
                <!-- WhatsApp Button Size Field -->
                <field id="whatsappbtn" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>WhatsApp Button Size</label>
                    <source_model>Mavenbird\WhatsApp\Model\System\Config\Source\Whatsappbtn</source_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                
                <!-- WhatsApp Button Label Field -->
                <field id="whatsappbtnlabel" translate="label" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>WhatsApp Button Label</label>
                    <comment><![CDATA[Set WhatsApp Button Label.]]></comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                
                <!-- Extra Text for WhatsApp Field -->
                <field id="extratext" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Extra Text For WhatsApp</label>
                    <comment><![CDATA[Set Extra Text For WhatsApp Share Message.]]></comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                
            </group>
        </section>
    </system>
</config>
