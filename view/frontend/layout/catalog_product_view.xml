<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_opengraph" />
    <update handle="page_calendar"/>
    <head>
        <css src="Mavenbird_WhatsApp::css/whatsapp.css"/>
    </head>
    <body>
        <referenceContainer name="product.info.social">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.WhatsApp" template="Mavenbird_WhatsApp::whatsapp.phtml" after="product.info.mailto">
                <arguments>
                    <argument name="view_model" xsi:type="object">Mavenbird\WhatsApp\ViewModel\WhatsApp</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>